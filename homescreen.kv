
<TabWidget>
    default_tab_text: 'Home'
    do_default_tab: True
    TabbedPanelItem:
        text: 'View 1'
        do_default_tab: True
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_x: root.width
                    padding: [10, 10, 5, 10]
                    pos_hint: {'top': 1}
                    spacing: 10
                    canvas:
                        Color:
                            rgb: 0, 1 , 0, 0.5
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    TextInput:
                        id: date_input
                        size_hint_x: None
                        size_hint_y: None
                        multiline: False
                        write_tab: False
                        font_size: 13
                        height: 27
                        width: 100
                        pos_hint: {'top': 1, 'x': 20}
                        text: 'dd/mm/yyyy'
                        on_text: root.validate(date_input.text)
                        on_text_validate: root.search(date_input.text, state_input.text, district_input.text, taluka_input.text, village_input.text)

                    TextInput:
                        id: state_input
                        size_hint_x: None
                        size_hint_y: None
                        multiline: False
                        write_tab: False
                        font_size: 13
                        height: 27
                        width: 120
                        pos_hint: {'top': 1}
                        text: 'State'
                        on_text: root.validate_state(state_input.text)
                        on_text_validate: root.search(date_input.text, state_input.text, district_input.text, taluka_input.text, village_input.text)
                    TextInput:
                        id: district_input
                        size_hint_x: None
                        size_hint_y: None
                        multiline: False
                        write_tab: False
                        font_size: 13
                        height: 27
                        width: 120
                        text: 'District'
                        pos_hint: {'top': 1}
                        on_text: root.validate_district(district_input.text)
                        on_text_validate: root.search(date_input.text, state_input.text, district_input.text, taluka_input.text, village_input.text)
                    TextInput:
                        id: taluka_input
                        size_hint_x: None
                        size_hint_y: None
                        multiline: False
                        write_tab: False
                        font_size: 13
                        height: 27
                        width: 120
                        text: 'Taluka'
                        pos_hint: {'top': 1}
                        on_text: root.validate_taluka(taluka_input.text)
                        on_text_validate: root.search(date_input.text, state_input.text, district_input.text, taluka_input.text, village_input.text)
                    TextInput:
                        id: pincode_input
                        size_hint_x: None
                        size_hint_y: None
                        multiline: False
                        write_tab: False
                        font_size: 13
                        height: 27
                        width: 120
                        text: 'PinCode'
                        pos_hint: {'top': 1}
                        on_text: root.validate_pincode(pincode_input.text)
                        on_text_validate: root.search(date_input.text, state_input.text, district_input.text, taluka_input.text, village_input.text)
                    Button:
                        id: search
                        size_hint: None, None
                        height: 20
                        width: 70
                        text: 'Search'
                        on_release: root.search(date_input.text, state_input.text, district_input.text, taluka_input.text, village_input.text)
                        pos_hint: {'top': 1}
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.7
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    pos_hint: {'top': 1}
                    canvas:
                        Color:
                            rgb: 1, 0 , 0, 0.5
                        Rectangle:
                            size: self.size
                            pos: self.pos
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    pos_hint: {'top': 1}
                    canvas:
                        Color:
                            rgb: 1, 0 , 1, 0.5
                        Rectangle:
                            size: self.size
                            pos: self.pos
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.2
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    pos_hint: {'top': 1}
                    canvas:
                        Color:
                            rgb: 0, 1 , 0, 0.5
                        Rectangle:
                            size: self.size
                            pos: self.pos
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    pos_hint: {'top': 1}
                    canvas:
                        Color:
                            rgb: 0, 0 , 1, 0.5
                        Rectangle:
                            size: self.size
                            pos: self.pos
    TabbedPanelItem:
        text: 'View 2'
        BoxLayout:
            Label:
                text: 'Second tab content area'
    TabbedPanelItem:
        text: 'View 3'

        RstDocument:
            text:
                '\n'.join(("Hello world", "-----------",
                "You are in the third tab."))
<CheckboxWidget>
    cols: 2
    size_hint_x: None
    size_hint_y: None
    pos_hint: {'top': 1}
    CheckBox:
        width: 100

    Label:
        id: checkbox1
        text: 'option 1'
    CheckBox:
        width: 100

    Label:
        id: checkbox2
        text: 'option 2'
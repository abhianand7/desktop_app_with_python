

<RootWidget>
    orientation: 'vertical'     # orientation for whether to stack the widgets on top of each other or side-by-side, by default it is set horizontal
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.4
        Label:
            id: label1          # always remember to use string for id never pure int value
            font_size: 30
            size_hint_y: 0.4
            pos_hint: {'center_x': 0.5}
            size_hint_x: None
            size: self.texture_size     # stop the text from overflowing the screen
            text: 'Login to your Account'
            #canvas:
                #Color:
                    #rgba: 0, 0, 1, 0.5
                #Rectangle:
                    #size: self.size
                    #pos: self.pos
    BoxLayout:
        orientation: 'horizontal'
        #canvas:
            #Color:
                #rgba: 0, 1, 0, 0.5
            #Rectangle:
                #pos: self.pos
                #size: self.size
        size_hint_y: 0.2
        Label:
            id: label2
            font_size: 20
            size_hint_y: None
            size_hint_x: 0.25
            size: self.texture_size
            pos_hint: {'center_y': 0.5, 'right':1}
            text: 'Email'
            #halign: 'right'
            #canvas:
                #Color:
                    #rgba: 0, 1, 0, 0.5
                #Rectangle:
                    #size: self.size
                    #pos: self.pos
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: text_input_email
                font_size: 15
                height: 30
                width: 150
                multiline: False
                write_tab: False
                size_hint_y: None
                size_hint_x: None
                pos_hint: {'center_y': 0.5}
                on_text: root.validate_text_input(text_input_email.text, 'e')
                on_text_validate: root.authenticate(text_input_email.text, text_input_pwd.text)
            Label:
                id: email_label
                font_size: 12
                pos_hint: {'center_y': 0.5}
                size_hint_x: None
                size_hint_y: None
                size: self.texture_size
                text: 'enter a valid email'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        Label:
            id: label3
            font_size: 20
            text: 'Password'
            size_hint_y: None
            size_hint_x: 0.25
            pos_hint: {'center_y': 0.5}
            size: self.texture_size
            #halign: 'right'
            #canvas:
                #Color:
                    #rgba: 1, 0, 0, 0.5
                #Rectangle:
                    #size: self.size
                    #pos: self.pos
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                id: text_input_pwd
                font_size: 15
                height: 30
                width: 150
                multiline: False
                write_tab: False
                size_hint_y: None
                size_hint_x: None
                pos_hint: {'center_y': 0.5}
                password: True
                on_text: root.validate_text_input(text_input_pwd.text, 'p')
                on_text_validate: root.authenticate(text_input_email.text, text_input_pwd.text)
            Label:
                id: pwd_label
                font_size: 12
                size_hint: None, None
                pos_hint: {'center_y': 0.5}
                size: self.texture_size
                text: ''

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        Button:
            id: login_button
            text: 'Login'
            height: 40
            width: 100
            size_hint_y: 0.2
            size_hint_x: None

            pos_hint: {'top': 1, 'x': 20}       # in case of vertical orientation of the box layout only center_x plays role, while in horizontal top plays role
            on_release: root.authenticate(text_input_email.text, text_input_pwd.text)
            #on_release: label1.color = [random.random() for i in xrange(3)] + [1]
